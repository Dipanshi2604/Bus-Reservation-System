<!DOCTYPE html>
<html>
<head>
  <title>BusReservation</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body style="background-color: #cfcfcfbd;">
  <br>
  <%= render 'home/header' %>
  <br>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <% if notice.present? || alert.present? %>
          <div class="text-center">
            <% if notice.present? %>
              <div class="alert alert-success" role="alert">
                <%= notice %>
              </div>
            <% end %>
            <% if alert.present? %>
              <div class="alert alert-danger" role="alert">
                <%= alert %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="container">
    <%= yield %>
  </div>
  <script>
  document.addEventListener("turbo:load", function() {
    const showReservationsForDateYes = document.getElementById("show_reservations_for_date_yes");
    const showReservationsForDateNo = document.getElementById("show_reservations_for_date_no");
    const dateFieldContainer = document.getElementById("date_field_container");
    const reservationDateInput = document.getElementById("reservation_date");
  
    function updateDateFieldVisibility() {
      if (showReservationsForDateYes.checked) {
        dateFieldContainer.style.display = "block";
      } else {
        dateFieldContainer.style.display = "none";
        reservationDateInput.value = null; // Reset date field value when "No" is selected
      }
    }
  
    showReservationsForDateYes.addEventListener("change", updateDateFieldVisibility);
    showReservationsForDateNo.addEventListener("change", updateDateFieldVisibility);
  
    // Initial update based on the default state
    updateDateFieldVisibility();
  });
  function submitForm() {
    document.getElementById('reservationForm').submit();
  }
  </script>

  <script src="https://kit.fontawesome.com/31998d0ab6.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
